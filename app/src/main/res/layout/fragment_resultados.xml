<!-- fragment_location.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C8C8C8">

    <TextView
        android:id="@+id/txtUvIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Índice UV" />

    <TextView
        android:id="@+id/txtWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velocidade do Vento" />

    <TextView
        android:id="@+id/txtTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura" />

    <TextView
        android:id="@+id/txtSolarEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energia Solar Estimada" />

    <TextView
        android:id="@+id/txtWindEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energia Eólica Estimada" />

</LinearLayout>
